{
    "name":        "triplepoint/groundhog-router",
    
    "description": "Simple standalone request router library.",
    
    "type":        "library",
    
    "keywords": [
         "routing"
     ],
    
    "license": "MIT",
    
    "authors": [
        {
            "name":     "Jonathan Hanson",
            "email":    "jonathan@jonathan-hanson.org",
            "homepage": "http://www.jonathan-hanson.org/",
            "role":     "Developer"
        }
    ],
    
    "support": {
    	"email":  "jonathan@jonathan-hanson.org",
    	"issues": "https://github.com/triplepoint/groundhog-router/issues",
    	"source": "https://github.com/triplepoint/groundhog-router"
    },
    
    "require": {
        "php": ">=5.3.5"
    },
    
    "require-dev": {
        "phpunit/phpunit":           "3.7.8",
        "pear-pear/PHP_CodeSniffer": "1.4.0"
    },
    
    "suggest" : {
    	"ext-apc": "Allows the use of the APC Routing Table store."
    },
    
    "repositories": [
         {
             "type": "pear",
             "url":  "http://pear.php.net"
         }
     ],
    
    "autoload": {
        "psr-0": {
        	"Groundhog\\Router": "source"
        }
    },
    
    "target-dir": "Groundhog/Router/source"
}